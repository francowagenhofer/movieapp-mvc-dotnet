@model app_movie_mvc.Models.Genero

@{
    ViewData["Title"] = "Detalles";
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Género</h1>
        <div class="text-white-50 small">Detalles del género seleccionado.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm app-btn app-btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-sm app-btn app-btn-ghost">Volver</a>
    </div>
</div>

<div class="card app-card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
        </dl>
    </div>
    <hr />
</div>
