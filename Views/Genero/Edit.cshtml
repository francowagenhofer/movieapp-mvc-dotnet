@model app_movie_mvc.Models.Genero

@{
    ViewData["Title"] = "Editar";
}

<h2 style="text-align:center; margin-bottom:2rem">Editar Género</h2>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 app-card">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-12">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control" autofocus />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-outline-primary ">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
