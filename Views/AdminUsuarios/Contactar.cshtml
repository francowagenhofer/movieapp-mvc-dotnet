@model app_movie_mvc.Models.ContactarUsuarioViewModel

@{
    ViewData["Title"] = "Contactar Usuario";
}

<div class="d-flex flex-column align-items-center text-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Contactar Usuario</h1>
        <div class="text-white-50 small">Enviar email a @Model.UsuarioNombre</div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5">
        <div class="card app-card">
            <div class="card-body">
                <form asp-action="Contactar" method="post">
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="hidden" asp-for="UsuarioEmail" />
                    <input type="hidden" asp-for="UsuarioNombre" />
                    
                    <div class="mb-3">
                        <label class="form-label">Destinatario</label>
                        <input type="text" class="form-control" value="@Model.UsuarioNombre (@Model.UsuarioEmail)" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Asunto" class="form-label"></label>
                        <input asp-for="Asunto" class="form-control" placeholder="Asunto del mensaje" />
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mensaje" class="form-label"></label>
                        <textarea asp-for="Mensaje" class="form-control" rows="2" 
                                  placeholder="Escribe tu mensaje aquí..."></textarea>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center gap-2 border-top border-secondary border-opacity-10 pt-3 mb-0">
                        <button type="submit" class="btn app-btn btn-outline-primary">Enviar Email</button>
                        <a asp-action="Details" asp-route-id="@Model.UsuarioId"
                           class="btn app-btn app-btn-ghost">Cancelar</a>
                    </div>
                     @* asp-controller="AdminUsuarios" asp-action="Index" *@ 
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}