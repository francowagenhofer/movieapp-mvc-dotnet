@model app_movie_mvc.Models.UsuarioDetalleViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<style>
    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .card-fixed-height {
        display: flex;
        flex-direction: column;
        height: 100%;
        min-height: 400px;
    }

    .card-body-scrollable {
        flex: 1;
        overflow-y: auto;
        padding-bottom: 1rem;
    }

    .card-body-scrollable::-webkit-scrollbar {
        width: 6px;
    }

    .card-body-scrollable::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

    .card-body-scrollable::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
    }

    .card-body-scrollable::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    .buttons-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .buttons-group .btn {
        width: 100%;
        padding: 0.6rem 0.5rem;
        font-size: 0.85rem;
    }

    .toggle-suspension-btn {
        width: 100%;
        padding: 0.6rem 0.5rem;
        font-size: 0.85rem;
    }

    .col-profile {
        flex: 0 0 calc(33.333% - 0.75rem);
    }

    .col-info {
        flex: 0 0 calc(33.333% - 0.75rem);
    }

    .col-reviews {
        flex: 0 0 calc(33.333% - 0.75rem);
    }
        

</style>

<div class="d-flex flex-column align-items-center text-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Detalles del Usuario</h1>
        <div class="text-white-50 small">Información completa del usuario seleccionado.</div>
    </div>
</div>

<div class="row g-3" style="display: flex;">
    
    <div class="col-profile">
        <div class="card app-card card-fixed-height">
            <div class="card-body text-center d-flex flex-column">
                <div>
                    <img src="@Model.ImagenUrlPerfil" alt="@Model.Nombre" 
                         class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                    <h5 class="fw-bold">@Model.Nombre @Model.Apellido</h5>
                    <p class="text-white-75 mb-2">@Model.Email</p>
                    
                    @if (Model.EstaActivo)
                    {
                        <span class="badge bg-success mb-3">Cuenta Activa</span>
                    }
                    else
                    {
                        <span class="badge bg-danger mb-3">Cuenta Suspendida</span>
                    }

                    <div class="d-flex justify-content-center gap-2 mb-3 flex-wrap">
                        @foreach (var rol in Model.Roles)
                        {
                            <span class="badge bg-info">@rol</span>
                        }
                    </div>
                </div>

                <div class="mt-auto">
                    <div class="buttons-group">
                        <a asp-action="Contactar" asp-route-id="@Model.Id" class="btn app-btn btn-outline-primary">Contactar</a>
                        <a asp-action="Index" class="btn app-btn app-btn-ghost">Volver</a>
                    </div>

                    <form asp-action="ToggleSuspension" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @if (Model.EstaActivo)
                        {
                            <button type="submit" class="btn app-btn btn-outline-warning toggle-suspension-btn"
                                    onclick="return confirm('¿Estás seguro de suspender a este usuario?')">
                                Suspender
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn app-btn btn-outline-success toggle-suspension-btn"
                                    onclick="return confirm('¿Estás seguro de activar a este usuario?')">
                                Activar
                            </button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Columna 2: Información Personal y Estadísticas (4 columnas) -->
    <div class="col-info">
        <div class="card app-card card-fixed-height">
            <div class="card-body d-flex flex-column">
                <div>
                    <h5 class="card-title mb-3">Información Personal</h5>
                    <dl class="row mb-3">
                        <dt class="col-sm-5">Teléfono</dt>
                        <dd class="col-sm-7">@(Model.PhoneNumber ?? "No especificado")</dd>
                        
                        <dt class="col-sm-5">Nacimiento</dt>
                        <dd class="col-sm-7">
                            @(Model.FechaNacimiento != DateTime.MinValue ? Model.FechaNacimiento.ToShortDateString() : "No especificada")
                        </dd>
                        
                        <dt class="col-sm-5">Registro</dt>
                        <dd class="col-sm-7">@Model.FechaRegistro.ToShortDateString()</dd>
                    </dl>
                </div>

                <div class="mt-2">
                    <h5 class="card-title mb-3 text-muted border-top border-secondary border-opacity-10 pt-3">Estadísticas</h5>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="p-2">
                                <span class="material-symbols-outlined" style="font-size: 36px; color: #ffc107;">
                                    star
                                </span>
                                <h4 class="mt-2 mb-0">@Model.Reviews.Count</h4>
                                <p class="text-white-50 mb-0 small">Reseñas</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2">
                                <span class="material-symbols-outlined" style="font-size: 36px; color: #ff3b30;">
                                    favorite
                                </span>
                                <h4 class="mt-2 mb-0">@Model.PeliculasFavoritas.Count</h4>
                                <p class="text-white-50 mb-0 small">Favoritos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Columna 3: Últimas Reseñas (4 columnas) -->
    <div class="col-reviews">
        <div class="card app-card card-fixed-height">
            <div class="card-body d-flex flex-column p-0">
                <h5 class="card-title mb-3 px-3 pt-3">Últimas Reseñas</h5>
                @if (Model.Reviews.Any())
                {
                    <div class="card-body-scrollable px-3">
                        <div class="list-group list-group-flush">
                            @foreach (var review in Model.Reviews.Take(10))
                            {
                                <div class="list-group-item bg-dark border-secondary p-2 mb-2">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <strong class="small">@review.Pelicula?.Titulo</strong>
                                        <div class="review-rating-compact">
                                            <span class="material-symbols-outlined star-filled" style="font-size: 16px;">star</span>
                                            <span class="review-rating-number">@review.Rating</span>
                                        </div>
                                    </div>
                                    <p class="mb-1 text-white-75 small">@review.Comentario</p>
                                    <small class="text-white-50">@review.FechaReview.ToShortDateString()</small>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center text-white-50 py-5">
                        <p class="mb-0">Sin reseñas registradas</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>