@model List<app_movie_mvc.Models.Pelicula>
@using app_movie_mvc.Models
@{
    ViewData["Title"] = "Mis Películas Favoritas";
}

<div class="review-container">
    <header class="mb-3">

        <div class="text-center">
            <h2 class="h3 fw-bold mb-1">Mis Películas Favoritas</h2>
            <p class="text-white-50 mb-3">
                Listado de películas marcadas como favoritas.
            </p>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
            <div class="review-stats">
                <strong class="me-2">Total:</strong> <span class="badge bg-secondary">@(Model?.Count ?? 0)</span>
            </div>

            <div class="review-search w-md-auto">
                <div class="input-group input-group-sm">
                    <input id="review-search" type="search" class="form-control" placeholder="Buscar por película..." aria-label="Buscar reseñas por película" />
                    <button id="review-clear" type="button" class="btn btn-outline-secondary">Limpiar</button>
                </div>
            </div>
        </div>
    </header>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Aún no tienes películas favoritas.</div>
    }
    else
    {
        <div class="review-list">
            @foreach (var pelicula in Model)
            {
                var reviews = pelicula.ListaReviews ?? new List<Review>();
                var ratingPromedio = reviews.Count > 0 ? Math.Round(reviews.Average(r => r.Rating), 1) : 0;
                var favCount = pelicula.UusariosFavorito?.Count ?? 0;

                <article class="review-card rc-hover mb-3 fav-card" data-movie-title="@pelicula.Titulo">
                    <div class="review-main">
                        <img alt="@pelicula.Titulo"
                             class="review-thumb"
                             src="@pelicula.PosterUrlPortada" />

                        <div class="review-content">
                            <div class="review-title-row">
                                <h5 class="review-title mb-0">@pelicula.Titulo</h5>
                                <div class="d-inline-flex align-items-center gap-1 ms-2">
                                    <span class="material-symbols-outlined" style="font-size:18px;line-height:1;color:#ff3b30;">favorite</span>
                                    @* <span class="small text-white-50">@favCount</span> *@
                                </div>
                            </div>

                            <div class="review-meta-row mt-1">
                                <div class="review-rating-compact">
                                    <span class="material-symbols-outlined star-filled me-1">star</span>
                                    <span class="review-rating-number">@ratingPromedio.ToString("0.0")</span>
                                </div>
                            </div>

                            <p class="review-text text-white-50 mb-0">Marcada como favorita.</p>
                        </div>
                    </div>

                    <div class="review-footer d-flex flex-column flex-sm-row gap-2">
                        <a asp-controller="Home"
                           asp-action="Details"
                           asp-route-id="@pelicula.Id"
                           class="btn btn-sm app-btn app-btn-ghost w-100">
                            Ver detalle
                        </a>
                        <form asp-controller="Favoritos" asp-action="Toggle" method="post" class="m-0 w-100">
                            <input type="hidden" name="id" value="@pelicula.Id" />
                            <input type="hidden" name="returnUrl" value="@Url.Action("Index", "Favoritos")" />
                            <button type="submit" class="btn btn-sm app-btn btn-outline-danger w-100">
                                <span class="material-symbols-outlined align-middle me-1" style="font-size:18px;">heart_minus</span>
                                <span class="align-middle">Quitar de favoritos</span>
                            </button>
                        </form>
                    </div>
                </article>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            var input = document.getElementById('review-search');
            var clearBtn = document.getElementById('review-clear');
            var cards = document.querySelectorAll('.review-container .review-card[data-movie-title]');

            function normalize(text) {
                return (text || '').toString().toLowerCase().trim();
            }

            function filter() {
                var q = normalize(input.value);
                cards.forEach(function (card) {
                    var title = normalize(card.dataset.movieTitle);
                    if (!q || title.indexOf(q) !== -1) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            if (input) {
                input.addEventListener('input', filter);
            }
            if (clearBtn) {
                clearBtn.addEventListener('click', function () {
                    input.value = '';
                    filter();
                    input.focus();
                });
            }
        })();
    </script>
}