@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}

<main class="flex-grow-1 d-flex align-items-center justify-content-center py-3 px-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">

                <div class="card app-auth-card border-0 p-4 rounded-3">
                    <div class="card-body">
                        <h2 class="card-title text-center h3 fw-bold mb-4 pb-3 border-bottom border-secondary border-opacity-10">Crear una cuenta</h2>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="Nombre"></label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="Apellido"></label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Ingresa tu apellido" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="Clave"></label>
                                    <input autocomplete="new-password" asp-for="Clave" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                                    <span asp-validation-for="Clave" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="ConfirmarClave"></label>
                                    <input autocomplete="new-password" asp-for="ConfirmarClave" type="password" class="form-control" placeholder="Confirma tu contraseña" />
                                    <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <button class="btn btn-outline-primary fw-bold" type="submit">Registrarse</button>
                               
                            </div>
                        </form>
                        <p class="mt-4 pt-3 text-center text-muted border-top border-secondary border-opacity-10 mb-0">
                            ¿Ya tienes una cuenta?
                            <a asp-action="Login" class="fw-medium text-primary text-decoration-none">
                                Inicia sesión
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>