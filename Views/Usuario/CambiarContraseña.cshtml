@{
    ViewData["Title"] = "Cambiar contraseña";
}
@model CambiarContraseñaViewModel

@{
    string mensaje = ViewBag.Mensaje as string ?? "";
}

<main class="flex-grow-1 d-flex align-items-center justify-content-center py-3">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-12 col-md-8 col-lg-5 col-xl-4">

                <div class="card app-auth-card app-profile-card p-4 rounded-3">

                    <!-- Encabezado -->
                    <div class="text-center mb-4 pb-3 border-bottom border-secondary border-opacity-10">
                        <div class="d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; background-color: rgba(13, 110, 253, 0.1); border-radius: 12px; margin: 0 auto;">
                            <span class="material-symbols-outlined" style="font-size: 32px; color: #0d6efd;">lock</span>
                        </div>
                        <h2 class="h5 fw-bold mb-1">Cambiar contraseña</h2>
                        <p class="text-secondary mb-0">Actualiza tu contraseña para mantener tu cuenta segura</p>
                    </div>

                    <!-- Formulario -->
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="ContraseñaActual">Contraseña actual</label>
                            <input asp-for="ContraseñaActual" type="password" class="form-control form-control-sm" placeholder="Ingresa tu contraseña actual" />
                            <span asp-validation-for="ContraseñaActual" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="ContraseñaNueva">Nueva contraseña</label>
                            <input asp-for="ContraseñaNueva" type="password" class="form-control form-control-sm" placeholder="Ingresa tu nueva contraseña" />
                            <span asp-validation-for="ContraseñaNueva" class="text-danger small"></span>
                            <small class="text-secondary d-block mt-1">Mínimo 4 caracteres</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" asp-for="ConfirmarContraseña">Confirmar contraseña</label>
                            <input asp-for="ConfirmarContraseña" type="password" class="form-control form-control-sm" placeholder="Repite tu nueva contraseña" />
                            <span asp-validation-for="ConfirmarContraseña" class="text-danger small"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary fw-semibold" type="submit">
                                Cambiar contraseña
                            </button>
                            <a asp-action="Cuenta" class="btn btn-outline-secondary fw-semibold d-flex align-items-center justify-content-center gap-1">
                                Volver
                            </a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(mensaje))
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                            @mensaje
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
