@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<main class="flex-grow-1 d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 col-xl-4">

                <div class="card app-auth-card border-0">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-4 h3 fw-bold mb-4 pb-3  border-bottom border-secondary border-opacity-10">Iniciar sesión</h2>
                        <form method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="mb-3">
                                <label class="form-label visually-hidden">Correo electrónico</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label visually-hidden" for="password">Contraseña</label>
                                <input asp-for="Clave" type="password" class="form-control form-control-lg" placeholder="Ingresa tu contraseña" />
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Recordarme" />
                                    <label class="form-check-label"> Recordarme </label>
                                </div>
                                <a class="btn btn-link text-decoration-none p-0" href="#">¿Olvidaste tu contraseña?</a>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-outline-primary fw-bold" type="submit">Iniciar sesión</button>
                            </div>
                        </form>
                        <p class="mt-4 pt-3 text-center text-muted border-top border-secondary border-opacity-10 mb-0">

                            ¿No tienes cuenta?
                            <a asp-action="Registro" class="fw-medium text-primary text-decoration-none">Regístrate</a>
                        </p>
                    </div>
                  

                </div>
            </div>
        </div>
    </div>
</main>