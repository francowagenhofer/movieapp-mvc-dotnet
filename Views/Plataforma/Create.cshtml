@model app_movie_mvc.Models.Plataforma

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>

<h4>Plataforma</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" autofocus />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="LogoUrl" class="form-label"></label>
                <input asp-for="LogoUrl" class="form-control" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Agregar plataforma</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
