@model app_movie_mvc.Models.Plataforma

@{
    ViewData["Title"] = "Editar";
}

<h2 style="text-align:center; margin-bottom:2rem">Editar Plataforma</h2>

<div class="row justify-content-center g-4">
    <div class="col-12 col-lg-5 app-card">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-12">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" autofocus />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="LogoUrl" class="form-label"></label>
                <input asp-for="LogoUrl" class="form-control" oninput="updateLogoPreview(this, 'logoPreviewEdit')" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-outline-primary ">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card app-card h-100">
            <div class="card-body d-flex flex-column align-items-center justify-content-center gap-2 text-center p-2">
                <h6>Vista previa</h6>
                <img id="logoPreviewEdit" src="@(string.IsNullOrWhiteSpace(Model?.LogoUrl) ? "https://via.placeholder.com/160x120?text=Logo" : Model.LogoUrl)" alt="Logo preview" class="w-100" style="max-width: 100%; height: auto; object-fit: contain;" />
                <p class="text-white-50 small mb-0">Actualizá la URL para ver el logo.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        const logoPlaceholder = 'https://via.placeholder.com/160x120?text=Logo';
        function updateLogoPreview(input, imgId) {
            const img = document.getElementById(imgId);
            if (!img) return;
            const url = input.value?.trim();
            img.src = url ? url : logoPlaceholder;
        }
    </script>
}
