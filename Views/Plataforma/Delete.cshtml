@model app_movie_mvc.Models.Plataforma

@{
    ViewData["Title"] = "Eliminar";
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Eliminar plataforma</h1>
        <div class="text-white-50 small">Confirmá la eliminación. Esta acción no se puede deshacer.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-sm app-btn app-btn-ghost">Volver</a>
    </div>
</div>


<div class="card app-card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
            <dt class="col-sm-3">Url</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Url)</dd>
        </dl>
        <hr />
        <form asp-action="Delete" method="post" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-outline-light">Cancelar</a>
        </form>
    </div>
</div>
