@model IEnumerable<app_movie_mvc.Models.Plataforma>

@{
    ViewData["Title"] = "Plataformas";
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Gestión de Plataformas</h1>
        <div class="text-white-50 small">Administrá las plataformas disponibles.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn app-btn btn-outline-primary">
           + Agregar Plataforma
        </a>
    </div>
</div>
    <div class="card app-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="plataformasTable" class="table table-dark table-hover align-middle mb-0 app-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Url</th>
                            <th class="text-center">Logo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Nombre</td>
                                <td class="text-white-75">@item.Url</td>
                                <td class="text-center">
                                <img src="@item.LogoUrl" alt="@item.Nombre" class="logo-thumb" />
                                </td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm app-btn app-btn-ghost">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm app-btn app-btn-ghost">Detalles</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm app-btn btn-outline-danger">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

