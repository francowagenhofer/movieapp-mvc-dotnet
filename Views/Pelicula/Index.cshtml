@model IEnumerable<app_movie_mvc.Models.Pelicula>

@{
    ViewData["Title"] = "Películas";
}

<div class="d-flex flex-column align-items-center text-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Gestión de Películas</h1>
        <div class="text-white-50 small">Administrá el catálogo: agregar, editar, ver detalles o eliminar.</div>
    </div>
</div>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2 mb-3">
    <div class="review-stats">
        <strong class="me-2">Total:</strong> <span class="badge bg-secondary">@Model.Count()</span>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn app-btn btn-outline-primary">
            + Agregar Pelicula
        </a>
    </div>
</div>

<div class="card app-card">
    <div class="card-body p-0 ">
        <div class="table-responsive">
            <table id="peliculasTable" class="table table-dark table-hover align-middle mb-0 app-table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Género</th> 
                        <th>Plataforma</th>
                        <th class="text-center">Poster</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Titulo</td>
                            <td class="text-white-75">@item.Genero?.Descripcion</td>
                            <td class="text-white-75">@item.Plataforma?.Nombre</td>
                            <td class="text-center">
                                <img src="@item.PosterUrlPortada" alt="@item.Titulo" class="poster-thumb" />
                            </td>
                            <td class="text-end">
                                <div class="d-inline-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm app-btn app-btn-ghost">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm app-btn app-btn-ghost">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm app-btn btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#peliculasTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' },
                columnDefs: [{ orderable: false, targets: [3, 4] }],
                pageLength: 10,
                lengthMenu: [[5, 10, 25, -1], [5, 10, 25, 'Todos']]
            });
        });
    </script>
}
