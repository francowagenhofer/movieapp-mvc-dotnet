@model app_movie_mvc.Models.Pelicula

@{
    ViewData["Title"] = "Detalles";
}

<div class="d-flex flex-column align-items-center text-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Película</h1>
        <div class="text-white-50 small">Detalles de la película seleccionada.</div>
    </div>
</div>

<div class="d-flex justify-content-center mb-3">
    <div class="card app-card w-100" style="max-width: 70%;">
        <div class="card-body">
            <div class="row g-3 align-items-start">
                <div class="col-12 col-md-3 text-center">
                    <img src="@Model.PosterUrlPortada" alt="@Model.Titulo" class="poster-detail" />
                </div>
                <div class="col-12 col-md-9">
                    <dl class="row mb-0 text-start">
                        <dt class="col-sm-6 col-6">Título</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.Titulo)</dd>
                        <dt class="col-sm-6 col-6">Fecha de lanzamiento</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.FechaLanzamiento)</dd>
                        <dt class="col-sm-6 col-6">Duración (min)</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.MinutosDuracion)</dd>
                        <dt class="col-sm-6 col-6">Sinopsis</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.Sinopsis)</dd>
                        <dt class="col-sm-6 col-6">Género</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.Genero.Descripcion)</dd>
                        <dt class="col-sm-6 col-6">Plataforma</dt>
                        <dd class="col-sm-6 col-6">@Html.DisplayFor(model => model.Plataforma.Nombre)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2 pt-3 mt-2 border-top border-secondary border-opacity-25">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm app-btn btn-outline-primary">Editar</a>
                <a asp-action="Index" class="btn btn-sm app-btn app-btn-ghost">Volver</a>
            </div>
        </div>
    </div>
</div>
