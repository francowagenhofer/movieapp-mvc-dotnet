@model app_movie_mvc.Models.Pelicula

@{
    ViewData["Title"] = "Eliminar";
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Eliminar película</h1>
        <div class="text-white-50 small">Confirmá la eliminación. Esta acción no se puede deshacer.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-sm app-btn app-btn-ghost">Volver</a>
    </div>
</div>


<div class="card app-card">
    <div class="card-body">
        <div class="row g-3 align-items-start">
            <div class="col-12 col-md-3 text-md-center">
                <img src="@Model.PosterUrlPortada" alt="@Model.Titulo" class="poster-detail" />
            </div>
            <div class="col-12 col-md-9">
                <dl class="row">
                    <dt class="col-sm-4 col-6">Título</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.Titulo)</dd>
                    <dt class="col-sm-4 col-6">Fecha de lanzamiento</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.FechaLanzamiento)</dd>
                    <dt class="col-sm-4 col-6">Duración (min)</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.MinutosDuracion)</dd>
                    <dt class="col-sm-4 col-6">Sinopsis</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.Sinopsis)</dd>
                    <dt class="col-sm-4 col-6">Género</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.Genero.Descripcion)</dd>
                    <dt class="col-sm-4 col-6">Plataforma</dt>
                    <dd class="col-sm-8 col-6">@Html.DisplayFor(model => model.Plataforma.Nombre)</dd>
                </dl>
                <hr />
                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-outline-light">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
