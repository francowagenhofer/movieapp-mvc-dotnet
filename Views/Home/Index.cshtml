@model List<Pelicula>
@using System.Linq

@using app_movie_mvc.Models
@{
    ViewData["Title"] = "Home Page";

    var paginaActual = ViewBag.PaginaActual ?? 1;
    var totalPaginas = ViewBag.TotalPaginas ?? 1;
    var totalPeliculas = ViewBag.TotalPeliculas ?? 0;
    var busqueda = ViewBag.TxtBusqueda ?? "";
    var generoId = ViewBag.GeneroId ?? 0;
}

<main class="flex-grow-1 home-page">
    <div class="container py-4">

        @* panel de filtros *@
        <form method="get">
            <div class="row g-3 mb-4 align-items-center">
                <div class="col-lg-6">
                    <div class="input-group">
                        <button type="submit" class="input-group-text">Buscar</button>
                        <input name="txtBusqueda" value="@busqueda" class="form-control form-control-lg" placeholder="Buscar películas..." type="text" />
                    </div>
                </div>
                <div class="col-lg-6 d-flex flex-wrap gap-2 justify-content-lg-end">

                    <div class="dropdown">
                        <select name="generoId" asp-items="@ViewBag.GeneroId" class="form-select form-select-lg btn-outline-secondary"
                                onchange="this.form.submit()"></select>
                    </div>


                    <div class="dropdown">
                        <select name="plataformaId"
                                asp-items="@ViewBag.PlataformaId"
                                class="form-select form-select-lg btn-outline-secondary"
                                onchange="this.form.submit()"></select>
                    </div>

                    <div class="dropdown">
                        <select name="minRating"
                                asp-items="@ViewBag.MinRating"
                                class="form-select form-select-lg btn-outline-secondary"
                                onchange="this.form.submit()"></select>
                    </div>


                </div>
            </div>
        </form>

        @*  listado de tarjetas*? *@
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-4">
            @foreach (var pelicula in Model)
            {
                var reviews = pelicula.ListaReviews ?? new List<Review>();
                var ratingPromedio = reviews.Count > 0
                ? Math.Round(reviews.Average(r => r.Rating), 1)
                : 0;
                var favCount = pelicula.UusariosFavorito?.Count ?? 0;
                bool isFav = false;
                if (User?.Identity?.IsAuthenticated == true)
                {
                    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                    isFav = pelicula.UusariosFavorito?.Any(f => f.UsuarioId == userId) ?? false;
                }

                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <a asp-action="Details" asp-route-id="@pelicula.Id">
                                <img alt="@pelicula.Titulo" class="card-img-top" src="@pelicula.PosterUrlPortada" />
                            </a>
                        </div>

                        <div class="card-body p-2">
                            <h5 class="card-title fs-6 fw-semibold mb-1 text-truncate" title="@pelicula.Titulo">
                                <a asp-action="Details" asp-route-id="@pelicula.Id" class="text-decoration-none text-reset">@pelicula.Titulo</a>
                            </h5>

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="review-rating-compact">
                                    <span class="material-symbols-outlined star-filled me-1">star</span>
                                    <span class="review-rating-number">@ratingPromedio.ToString("0.0")</span>
                                </div>


                                <div class="d-inline-flex align-items-center">
                                    @if (User?.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Favoritos" asp-action="Toggle" method="post" class="m-0">
                                            <input type="hidden" name="id" value="@pelicula.Id" />
                                            <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                                            <button type="submit"
                                                    class="btn btn-sm p-1 d-inline-flex align-items-center justify-content-center border-0 bg-transparent"
                                                    style="color:@(isFav ? "#ff3b30" : "#8a8a8a"); box-shadow:none;"
                                                    title="Agregar/Quitar favorito" aria-label="Agregar o quitar favorito">
                                                <span class="material-symbols-outlined" style="font-size:18px;line-height:1;font-variation-settings:'FILL' @(isFav ? "1" : "0");">favorite</span>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="material-symbols-outlined" style="font-size:18px;line-height:1;color:#8a8a8a;font-variation-settings:'FILL' 0;">favorite</span>
                                    }
                                    <span class="ms-1 small text-white-50">@favCount</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
            
        <!-- Paginación -->
        @if (totalPaginas > 1)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination pagination-modern justify-content-center">
                            <!-- Botón Anterior -->
                            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                <a asp-action="Index" class="page-link" asp-route-pagina="@(paginaActual - 1)" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId">Anterior</a>
                            </li>

                            <!-- Números de página -->
                            @for (int i = 1; i <= totalPaginas; i++)
                            {
                                <li class="page-item @(i == paginaActual ? "active" : "")">
                                    <a asp-action="Index" asp-route-pagina="@i" class="page-link" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId">@i</a>
                                </li>
                            }

                            <!-- Botón Siguiente -->
                            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                <a asp-action="Index" class="page-link" asp-route-pagina="@(paginaActual + 1)" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                    <p class="text-center text-muted small">
                        Mostrando @((paginaActual - 1) * 8 + 1) - @(Math.Min(paginaActual * 8, totalPeliculas)) de @totalPeliculas películas
                    </p>
                </div>
            </div>
        }
    </div>
</main>

