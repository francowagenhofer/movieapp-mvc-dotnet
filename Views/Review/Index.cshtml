@using Microsoft.IdentityModel.Tokens
@model List<Review>

@{
    ViewData["Title"] = "Mis Reseñas";
}

<style>
    .view-toggle-btn span {
        font-size: 18px !important;
    }
</style>

<div class="review-container">
    <header class="mb-3">
        <div class="text-center">
            <h2 class="h3 fw-bold mb-1">Mis Reseñas</h2>
            <p class="text-white-50 mb-3">
                Reseñas y calificaciones guardadas en un solo lugar.
            </p>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
            <div class="review-stats">
                <strong class="me-2">Total:</strong> <span class="badge bg-secondary">@Model.Count</span>
            </div>

            <div class="d-flex gap-2">
                @if (!Model.IsNullOrEmpty())
                {
                    <div class="d-flex gap-1">
                        <button id="view-cards-btn" class="btn btn-sm app-btn active view-toggle-btn" title="Ver como cards">
                            <span class="material-symbols-outlined">dashboard</span>
                        </button>
                        <button id="view-table-btn" class="btn btn-sm app-btn view-toggle-btn" title="Ver como tabla">
                            <span class="material-symbols-outlined">table_chart</span>
                        </button>
                    </div>
                }
                <div class="input-group input-group-sm">
                    <input id="review-search" type="search" class="form-control" placeholder="Buscar por película..."/>
                    <button id="review-clear" type="button" class="btn btn-outline-secondary">Limpiar</button>
                </div>
            </div>
        </div>
    </header>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary small">
            Todavía no tenés reseñas. Buscá una película en el home y dejá tu primera opinión
        </div>
    }
    else
    {
        <div id="cards-view" class="review-list">
            @foreach (var item in Model)
            {
                <article class="review-card rc-hover" data-movie-title="@item.Pelicula?.Titulo">
                    <div class="review-main">
                        <img alt="@item.Pelicula?.Titulo"
                             class="review-thumb"
                             src="@item.Pelicula?.PosterUrlPortada" />

                        <div class="review-content">

                            <div class="review-title-row">
                                <h5 class="review-title">@item.Pelicula?.Titulo</h5>
                            </div>
                            <div class="review-meta-row">
                                <span class="review-date">
                                    @item.FechaReview.ToShortDateString()
                                </span>

                                <div class="review-rating-compact">
                                    <span class="material-symbols-outlined star-filled me-1">star</span>
                                    <span class="review-rating-number">@item.Rating</span>
                                </div>

                            </div>

                            <p class="review-text">@item.Comentario</p>
                        </div>

                    </div>
                    <div class="review-footer">
                        <a asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-sm app-btn app-btn-ghost w-100">
                            Editar Reseña
                        </a>
                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-sm app-btn btn-outline-danger w-100">
                            Eliminar
                        </a>
                    </div>


                </article>
            }

        </div>

        <div id="table-view" class="card app-card" style="display: none;">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0 app-table">
                        <thead>
                            <tr>
                                <th>Película</th>
                                <th>Fecha</th>
                                <th class="text-center">Carátula</th>
                                <th class="text-center">Calificación</th>
                                <th>Reseña</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-movie-title="@item.Pelicula?.Titulo">
                                    <td class="fw-semibold">@item.Pelicula?.Titulo</td>
                                    <td class="text-white-75">
                                        <span class="review-date">
                                            @item.FechaReview.ToShortDateString()
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <img alt="@item.Pelicula?.Titulo"
                                             class="logo-thumb"
                                             src="@item.Pelicula?.PosterUrlPortada"
                                             style="height: 50px; width: auto; object-fit: contain;" />
                                    </td>
                                    <td class="text-center">
                                        <div class="review-rating-compact">
                                            <span class="material-symbols-outlined star-filled me-1">star</span>
                                            <span class="review-rating-number">@item.Rating</span>
                                        </div>
                                    </td>
                                    <td class="text-white-75">
                                        <span class="text-truncate d-block" style="max-width: 200px;" title="@item.Comentario">
                                            @item.Comentario
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm app-btn app-btn-ghost">
                                                Editar
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm app-btn btn-outline-danger">
                                                Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            var input = document.getElementById('review-search');
            var clearBtn = document.getElementById('review-clear');
            var cardsView = document.getElementById('cards-view');
            var tableView = document.getElementById('table-view');
            var cardsBtnEl = document.getElementById('view-cards-btn');
            var tableBtnEl = document.getElementById('view-table-btn');

            function normalize(text) {
                return (text || '').toString().toLowerCase().trim();
            }

            function filterView() {
                var q = normalize(input.value);
                
                if (cardsView.style.display !== 'none') {
                    var cardList = cardsView.querySelectorAll('.review-card');
                    cardList.forEach(function (card) {
                        var title = normalize(card.dataset.movieTitle);
                        if (!q || title.indexOf(q) !== -1) {
                            card.style.display = '';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                } else {
                    var tableRows = tableView.querySelectorAll('tbody tr');
                    tableRows.forEach(function (row) {
                        var title = normalize(row.dataset.movieTitle);
                        if (!q || title.indexOf(q) !== -1) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                }
            }

            function switchToCards() {
                cardsView.style.display = '';
                tableView.style.display = 'none';
                cardsBtnEl.classList.add('active');
                tableBtnEl.classList.remove('active');
                filterView();
            }

            function switchToTable() {
                cardsView.style.display = 'none';
                tableView.style.display = '';
                tableBtnEl.classList.add('active');
                cardsBtnEl.classList.remove('active');
                filterView();
            }

            if (input) {
                input.addEventListener('input', filterView);
            }
            
            if (clearBtn) {
                clearBtn.addEventListener('click', function () {
                    input.value = '';
                    filterView();
                    input.focus();
                });
            }

            if (cardsBtnEl) {
                cardsBtnEl.addEventListener('click', switchToCards);
            }

            if (tableBtnEl) {
                tableBtnEl.addEventListener('click', switchToTable);
            }
        })();
    </script>
}
